<% provide :title, "History" %>
<div class="page-index">
  <div class="container">
    <p>
      <%= t "acount" %>
    </p>
  </div>
</div>
<div class="container_fullwidth">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="checkout-page">
          <ol class="checkout-steps">
            <li class="steps active">
              <a href="#" class="step-title">
              <%= t "history" %>
              </a>
              <div class="step-description">
              <%= link_to "Back", edit_user_path(current_user), class: "btn btn-info" %>
                <div class="row">
                  <table class="table">
                    <thead>
                      <tr>
                        <th>Address</th>
                        <th>Phone</th>
                        <th>Status</th>
                        <th>Create time</th>
                        <th>Action</th>
                      </tr>
                    </thead>
                    <tbody>
                      <%= render partial: "table", collection: @history, as: :history %>
                    </tbody>
                  </table>
                </div>
              </div>
            </li>
          </ol>
        </div>
      </div>
    </div>
    <div class="clearfix">
    </div>
  </div>
</div>
