<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <div class="col-md-offset-3 col-md-6 col-sm-6">
  <%= render "shared/error", object: f.object %>
    <div class="your-details">
      <h5>
        <%= yield(:title) %>
      </h5>
      <div class="form-row">
        <label class="lebel-abs">
        <%= t "acount" %>
        <strong class="red">
        *
        </strong>
        </label>
         <%= f.text_field :name, class: "input name_field" %>
      </div>
      <div class="form-row">
        <label class="lebel-abs">
         <%= t "email" %>
        <strong class="red">
        *
        </strong>
        </label>
        <%= f.text_field :email, class: "input name_field", disabled: true %>
      </div>
      <% if current_user.uid.blank? %>
      <div class="form-row">
        <label class="lebel-abs">
        <%= t "password" %>
        <strong class="red">
        *
        </strong>
        </label>
        <%= f.password_field :password, class: "input name_field" %>
      </div>
      <div class="form-row">
        <label class="lebel-abs">
        <%= t "confirmation_pw" %>
        <strong class="red">
        *
        </strong>
        </label>
        <%= f.password_field :password_confirmation, class: "input name_field" %>
      </div>
      <% if user_signed_in? %>
      <div class="form-row">
        <label class="lebel-abs">
        <%= t "current_password" %>
        <strong class="red">
        *
        </strong>
        </label>
        <%= f.password_field :current_password, class: "input name_field", autocomplete: "off" %>
      </div>
      <% end %>
      <% end %>
        <div class="form-row">
          <span class="picture">
            <%= f.file_field :image, accept: 'image/jpeg,image/gif,image/png' %>
          </span>
        </div>
       <%= f.submit yield(:button_text), class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
