<div class="header">
  <div class="container">
    <div class="row">
      <div class="col-md-2 col-sm-2">
        <div class="logo">
          <%= link_to root_path do %>
            <%= image_tag("logo.png", alt: t("shop")) %>
          <% end %>
        </div>
      </div>
      <div class="col-md-10 col-sm-10">
        <div class="header_top">
          <div class="row">
            <div class="col-md-offset-9 col-md-3">
              <ul class="usermenu">
                <% if logged_in? %>
                <li class="dropdown">
                  <%= link_to session[:user_name], "",{class: "log"} %>
                  <ul class="dropdown-menu">
                    <li>
                      <%= link_to t("logout"), logout_path, method: :delete %>
                    </li>
                    <li class="divider"></li>
                  </ul>
                </li>
                <% else %>
                <li><%= link_to t("acount"), login_path,{class:  "log"} %></li>
                <li><%= link_to t("Register"), new_path,{class: "log"} %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
        <div class="clearfix"></div>
        <div class="header_bottom">
          <ul class="option">
            <li id="search" class="search">
              <form>
                <input class="search-submit" type="submit" value="">
                <input class="search-input" placeholder="" type="text" value="" name="search">
              </form>
            </li>
            <li class="option-cart">
              <%= render "products/cart_header" %>
            </li>
          </ul>
          <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse"><span class="sr-only"><%= t "navigation" %></span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span></button>
          </div>
          <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
              <li class="active dropdown">
                <a href="<%= root_path %>"><%= t "home" %></a>
              </li>
              <% @categories.each do |category| %>
                <li><%= link_to category.name, category_path(category) %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="clearfix"></div>
