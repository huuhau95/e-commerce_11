<tr>
  <td>
    <%= user.name %>
  </td>
  <td>
    <%= image_tag user.image.url if user.image? %>
  </td>
  <td>
    <%= user.email %>
  </td>
  <td>
    <%= user.role == 1 ? "admin":"user" %>
  </td>
  <td>
    <%= user.created_at.strftime("%Y-%m-%d") %>
  </td>
  <td>
    <%= link_to t("edit"), edit_admin_user_path(user),
      class: "btn btn-primary" %>
  </td>
</tr>

