<%= provide :title, t("list_categories") %>
<div class="row">
  <div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
        <div class="overflow_hidden">
          <h1 class="float_left"><%= t "list_categories" %></h1>
          <%= link_to t("add_category"), new_admin_category_path, class: "btn btn-primary float_right" %>
        </div>
        <div class="nav search-row" id="top_menu">
          <%= search_form_for @search, url: admin_index_categories_path do |f| %>
            <ul class="form_search_fe">
              <li>
                <%= search_form_for @search do |field| %>
                  <%= field.grouping_fields(field.object.new_grouping) do |group_field| %>
                    <%= group_field.condition_fields(group_field.object.new_condition) do |condition_field| %>
                      <%= condition_field.attribute_fields do |attribute_field| %>
                        <%= attribute_field.attribute_select only: %i(id) %>
                      <% end %>
                      <%= condition_field.predicate_select only: %i(cont lt gt) %>
                      <%= condition_field.value_fields do |value_field| %>
                        <%= value_field.text_field :value %>
                      <% end %>
                    <% end %>
                  <% end %>
                <% end %>
              </li>
              <li>
                <%= f.submit type: "submit", class: "btn btn-primary", name: nil do %>
                  <%= t "Search" %>
                <% end %>
              </li>
            </ul>
          <% end %>
        </div>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>
                <%= t "categories" %>
              </th>
              <th>
                <%= t "status" %>
              </th>
              <th>
                <%= t "Create Date" %>
              </th>
              <th>
                <%= t "actions" %>
              </th>
            </tr>
          </thead>
          <tbody>
            <%= render @categories %>
          </tbody>
        </table>
        <div class="margin_bottom20px float_right">
          <%= paginate @categories, theme: 'twitter-bootstrap-3' %>
        </div>
      </div>
    </div>
  </div>
</div>
